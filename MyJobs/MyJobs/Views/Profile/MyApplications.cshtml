@using MyJobs.Infrastructure.Models
@model List<Job>


@if (Model.Count > 0)
{


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Job Title</th>
                <th>Category</th>
                <th>Company</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@job.Title</td>
                    <td>@job.Category.Name</td>
                    <td>@job.Company.CompanyName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-center">No jobs found!</h2>
}