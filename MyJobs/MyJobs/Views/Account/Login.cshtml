@using MyJobs.Core.Models.Account
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="loginForm" method="post">
            <hr />
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email">Email</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password">Password</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="loginSubmit" type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <p>If you do not have an account, <span id="registerLink" class="text-primary" style="cursor: pointer;">register here</span>.</p>
            <ul class="dropdown-menu dropdown-menu-end" id="registerDropdown" style="display: none; position: absolute; right: 0;">
                <li><a class="dropdown-item text-center" asp-controller="Account" asp-action="Register" asp-route-userType="Employer">Employer</a></li>
                <li><a class="dropdown-item text-center" asp-controller="Account" asp-action="Register" asp-route-userType="Employee">Employee</a></li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function() {
            $('#registerLink').click(function(e) {
                e.preventDefault();

                $('#registerDropdown').toggle();
            });
        });
    </script>
}
