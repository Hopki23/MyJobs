@using MyJobs.Core.Models.Job
@model IEnumerable<JobsViewModel>

@{
    ViewData["Title"] = "Jobs Page";
}


<br />
<div class="row">
    <div class="col-12">
        <h2 class="text-primary text-center">Jobs List </h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>ID</th>
                <th>Title</th>
                <th>Category Name</th>
                <th>Is approved</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Title</td>
                    <td>@user.CategoryName</td>
                    <td>@user.IsApproved</td>
                    <td>
                        @if (!user.IsApproved)
                        {
                            <form asp-area="Admin" asp-action="Approve" asp-controller="Job" asp-route-id="@user.Id" method="post">
                                <button type="submit" class="btn btn-block btn-outline-info">Approve</button>
                            </form>
                        }
                        @*<a asp-area="Admin" asp-action="Delete" asp-controller="Job" asp-route-id="@user.Id" class="btn btn-block btn-outline-info">Delete</a>*@
                        <a asp-area="" asp-action="GetById" asp-controller="Jobs" asp-route-id="@user.Id" class="btn btn-block btn-outline-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>